.col-12.col-md-8.col-lg-6
    .form-group.row
        .col-sm-5
            = label :representative, 'Representative:', class: 'col-form-label font-weight-bold'
        .col-sm-7
            = link_to @representative_name, representative_path(@representative), class: 'form-control-plaintext', target: '_blank'

    .form-group.row
        .col-sm-5
            = label :issue, 'Issue:', class: 'col-form-label font-weight-bold'
        .col-sm-7
            = text_field_tag :issue, @issue, class: 'form-control-plaintext', readonly: true

- top5.each_with_index do |item, index|
    %p
        %input{ type: 'radio', name: 'selected_item', value: index, id: "item_#{index}" }
        %label{ for: "item_#{index}" }
            %strong Title:
            = item.title
    %p
        %strong Link:
        %a{ href: item.url }= item.url
    %p
        %strong Description:
        = item.description

.form-group.row
    .col-sm-2
        = label :rating, 'Rating:', class: 'col-form-label'
    .col-sm-10
        = select_tag :rating, options_for_select((1..5).to_a, @ratings), class: 'form-control'

.actions
    = submit_tag 'Save', class: 'btn btn-primary'

.col-12.col-md-8.col-lg-6
    .clearfix.mt-3
        .float-right
            = link_to representative_news_items_path(@representative), class: 'btn btn-info' do
                View news articles
                %i.fas.fa-arrow-right